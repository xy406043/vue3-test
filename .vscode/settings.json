{
  // ===========================================
  // ================ 项目设置 ==================
  // ===========================================

  "js/ts.implicitProjectConfig.checkJs": true, // 避免额外报错
  "js/ts.implicitProjectConfig.experimentalDecorators": true,

  // ===========================================
  // ================ 格式化/代码检查 ============
  // ===========================================

  "eslint.enable": true, // 启用eslint
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    // 保存时eslint 修复
    "source.fixAll.eslint": true
  },

  "javascript.validate.enable": false, // 避免ts检查
  "typescript.validate.enable": true,

  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // =================== volar ======================

  // ================== 其它插件配置项=================

  "cSpell.userWords": [
    "windicss",
    "windi",
    "vueuse",
    "echarts",
    "axios",
    "mixins",
    "stylelint",
    "subpackage",
    "subpackages",
    "swiper",
    "Vite",
    "vitejs",
    "vnode",
    "vuex",
    "pinia",

    // ant-design
    "vant",
    "antd",
    "hoverable"
  ],
  // ===========================================
  // ================ i18n-ally ================
  // ===========================================
  // ===  便于进行vue-i18n阅读 与 修改 ============

  "i18n-ally.localesPaths": ["src/locales/lang"], // locales 目录，i18n-ally自动生成
  "i18n-ally.keystyle": "nested", // 文字显示语法 flat nestes
  // "i18n-ally.sortKeys": true,
  // "i18n-ally.keepFulfilled": true,
  // "i18n-ally.namespace": false, //  检索key 是否前置文件名
  // "i18n-ally.pathMatcher": "{locale}/{namespaces}.js", // 仅当 namespace 为true时进行设置

  "i18n-ally.sortKeys": true,
  "i18n-ally.namespace": true,
  "i18n-ally.pathMatcher": "{locale}/{namespaces}.{ext}",
  "i18n-ally.enabledParsers": ["js", "ts"],
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.displayLanguage": "zh-CN",
  "i18n-ally.enabledFrameworks": ["vue", "react"]
  // "i18n-ally.regex.usageMatchAppend": ["i18nRender"],
}
